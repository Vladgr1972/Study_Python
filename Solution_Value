class Value:
    def __init__(self):
        self.value = None

    @staticmethod
    def _prepare_value(value,obj):
        return int(value * (1 - obj.__get__()))

    def __get__(self, obj, Obj_type):
        return self.value

    def __set__(self, obj, value):
        self.value = self._prepare_value(value,obj)

class Account:
    amount = Value()

    def __init__(self, commission):
        self.commission = commission

    def __get__(self):
        return float(self.commission)

    def __str__(self):
        return str(self.commission)





